<div class="container">
  <div class="row">
    <div class="span12">
      <div class="head">
        <div class="row-fluid">
            <div class="span12">
                <div class="span6">
                    <h1 class="muted">Flatiron Store</h1>
                </div>
            </div>
        </div>

        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                  <button type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-left"></span><%= link_to "Store Home", store_path %>
                  </button> 
                  <div class="btn-group btn-group-default">
                  <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-th"><%= link_to "Categories", categories_path %></button>
                  <button data-toggle="dropdown" class="btn btn-default dropdown-toggle" type="button"><span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <% Category.all.each do |category| %>
                      <li><%= link_to category.title, category_path(category) %></li>
                    <% end %>
                  </ul>
                  </div>
                  <% if current_cart %>
                    <button type="button" class="btn btn-default">
                      <span class="glyphicon glyphicon-shopping-cart"></span><%= link_to "Cart", cart_path(current_cart) %>
                    </button>
                  <% end %>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>